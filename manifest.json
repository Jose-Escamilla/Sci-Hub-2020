{
  "manifest_version": 3,
  "name": "Sci-Hub Now! 2020",
  "short_name": "sci-hub-now 2020",
  "version": "0.0.3",
  "author": "Jose Escamilla",
  "homepage_url": "https://github.com/Jose-Escamilla/Sci-Hub-2020",
  "description": "Free access to academic papers with just a single click! Abolish publishers, long live the open access movement! Update 2020!",
  "icons": {
    "48": "icons/scihub48x48.png",
    "96": "icons/scihub96x96.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/scihub48x48.png",
      "96": "icons/scihub96x96.png"
    },
    "default_title": "Sci-Hub Now!",
    "theme_icons": [
      {
        "light": "icons/scihub48x48_white.png",
        "dark": "icons/scihub48x48.png",
        "size": 48
      },
      {
        "light": "icons/scihub96x96_white.png",
        "dark": "icons/scihub96x96.png",
        "size": 96
      }
    ]
  },
  "permissions": ["<all_urls>", "contextMenus"],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  }
}
